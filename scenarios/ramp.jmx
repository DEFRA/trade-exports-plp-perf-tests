          <stringProp name="scriptLanguage">groovy</stringProp>
          <stringProp name="script">
// Calculate current step (0-based)
def elapsed = (System.currentTimeMillis() - ctx.getTestStartTime()) / 1000
def step = (int)(elapsed / 900)
def baseRate = 350.0 / 60.0 // per minute
def rate = baseRate * (step + 1)
def delay = (60.0 * 1000.0) / rate // ms between requests
return (long)delay
          </stringProp>
